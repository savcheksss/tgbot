{
  "version": 2,
  "builds": [
    {
      "src": "bot.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "/bot.py"
    }
  ],
  "env": {
    "TELEGRAM_TOKEN": "@telegram_token",
    "CHANNEL_ID": "@channel_id",
    "ADMIN_ID": "@admin_id",
    "WEBHOOK_URL": "@webhook_url"
  }
}
